<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context="sccc.eample.mycarer_stroke.Food_ttsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/tv_want"
        android:textColor="#000000"
        android:text="I want Food. I am Hungry!"
        android:textSize="35dp"
        android:textStyle="bold"
        style="?android:listSeparatorTextViewStyle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="100dp"
        android:background="#000000"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/tv_notgood"
        android:textColor="#000000"
        android:text="Food is not good, I want something else."
        android:layout_marginTop="100dp"
        android:textSize="25dp"
        android:textStyle="bold"
        style="?android:listSeparatorTextViewStyle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="200dp"
        android:background="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/tv_spicy"
        android:textColor="#000000"
        android:text="Food is Spicy"
        android:layout_marginTop="200dp"
        android:textSize="35dp"
        android:textStyle="bold"
        style="?android:listSeparatorTextViewStyle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="300dp"
        android:background="#000000"/>

</FrameLayout>
